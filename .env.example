# Facebook OAuth Configuration Template
# Copy this file to .env and fill in your actual values
# DO NOT commit .env to version control!

# ====================
# FACEBOOK OAUTH SETUP
# ====================
# Create a Facebook App at https://developers.facebook.com/
# Navigate to App Dashboard > Settings > Basic to find your credentials

# Facebook App ID (public identifier for your app)
FACEBOOK_APP_ID=your_facebook_app_id_here

# Facebook App Secret (secret key - keep this secure!)
FACEBOOK_APP_SECRET=your_facebook_app_secret_here

# OAuth Callback URL (where Facebook redirects after authentication)
# Development example: http://localhost:5173/auth/callback/facebook
# Production example: https://yourdomain.com/auth/callback/facebook
FACEBOOK_CALLBACK_URL=http://localhost:5173/auth/callback/facebook

# Facebook Graph API Version (latest stable: v19.0)
# Check current versions: https://developers.facebook.com/docs/graph-api/changelog
FACEBOOK_API_VERSION=v19.0

# OAuth Scopes (comma-separated permissions your app requests)
# Common scopes: email, public_profile, user_birthday, user_friends
# See all scopes: https://developers.facebook.com/docs/permissions/reference
FACEBOOK_SCOPES=email,public_profile

# ====================
# SESSION SECURITY
# ====================
# Session encryption secret (MUST be at least 32 characters)
# Generate a secure random string using:
#   openssl rand -base64 32
# or
#   node -e "console.log(require('crypto').randomBytes(32).toString('base64'))"
AUTH_SECRET=your_auth_secret_minimum_32_characters_long_replace_this_with_secure_random_string
